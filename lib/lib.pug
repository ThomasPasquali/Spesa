mixin navbar(saluto='Salve sconosciuto',displaySearch='block')
    div.topnav
        .topnavElemSx
            a(href='/home')
                img.logo(src='/images/eurospin-logo.png')
        .topnavElemSx
            a.saluto=saluto 
        .topnavElemDx(style='display:'+displaySearch)
            .search-box
                input(type="text", placeholder="Cerca")
                span
        .topnavElemDx
            a.logout(href='/')
                i.fa.fa-check
                


mixin confirmButton(i='fa-check', display='block')
    a#confirmButton.float(style='display:'+display+'; position: absolute; bottom: 15px; right: 15px;')
        i(class='fa my-float '+i)

mixin iconButton(id, i)
    a.iconButton(id=id)
        i(class=i)