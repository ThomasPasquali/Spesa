include ../lib/lib
doctype mobile
html
    head
        title Casa pagina
        meta(charset='UTF-8')
        +jquery
        +bootstrap
        +fontawesome
        +cssLib
        link(rel='stylesheet', href='../css/main.css')
        script(src='/js/misc.js' type='module')
    body
        +navbar('Buonasera Astrobolide','none')
        .centra
            .sezione.attive
                .flex.dropdown-control(data-target='#liste')
                    h2 Liste attive
                #liste
                    ul
                        each lista in listeUtente
                            li
                                a(href='/spesa/' + lista.ID)=lista.Nome
            .sezione.operazioni   
                .flex.dropdown-control(data-target='#operazioni')
                    h2 Operazioni
                #operazioni
                    .sezione.operazioni.op
                        a(href="/newLista") Crea una nuova lista
                        i.fa.fa-arrow-right
                    .sezione.operazioni.op
                        a(href="/gestioneRicette") Ricette
                        i.fa.fa-arrow-right
                    if user.role == 'Admin'
                        .sezione.operazioni.op
                            a(href="/gestioneOggetti") Oggetti e supermercati
                            i.fa.fa-arrow-right
                        .sezione.operazioni.op
                            a(href="/gestioneUtenze") Utenze
                            i.fa.fa-arrow-right
