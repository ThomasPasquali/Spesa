extends layout_principale

block content
    script.
        initNewLista();
    h3(style='margin: 8px;') Crea una nuova lista
    div.utentiAssociati
        form.utenti(id='formUtentiAssociati' method='GET')
            h5 Dagli un nome:
            input.n(style='margin: 14px' name='nomeLista' placeholder='Nuovo')
            h5 Gruppi di utenti con il permesso di modificarla:
            div.utenti.master
        script.
            setInput();
        div
            button.aggiungi(id='addUtenteAssociato')
                h7 Aggiungi
                i.fa.fa-plus.aggiungi
            div.content-collapsible-utenti(id='selectUtenti')
                h5(style='margin: 4px;') L'ultimo che ho usato
                div.utenti.preferiti
                    span.utente
                        input.utente(type='radio' class='radioUtenti' value=prefGroup.ID id=prefGroup.Nome  name='groupLinked')
                        label.utenti(for='allPreferiti')=prefGroup.Nome
                h5(style='margin: 4px;') I miei gruppi
                div.utenti
                    each gruppo in allGroups
                        span.utente
                            input.utente(type='radio' class='radioUtenti' value=gruppo.ID name='groupLinked' id=gruppo.Nome)
                            label.utenti(for='allPreferiti')=gruppo.Nome
                button.aggiungi.right(id='confirmUtenti') OK

            h5 In quale supermmercato ti recherai?
            input(style="width: 200px;" id='selectS' class="alimento" name="supermercato" list="allSupermercati")

            h5 Oggetti della lista
            div.alimenti.blocked(id='divAlimenti')
                div.content-collapsible-ricette
                table
                    tr
                        td(style='padding-left: 40px;')
                            h7 Nome prodotto
                        td(style='padding-left: 84px;')
                            h7 Qta
                div.lista.master
                button.aggiungi(id='addAlimento')
                    h7(style='color: #f5aa3b') Aggiungi oggetto
                    i.fa.fa-plus.aggiungi
                br
                button.aggiungi(id='addRicetta')
                    h7(style='color: #f5aa3b') Aggiungi ricetta
                    i.fa.fa-plus.aggiungi
            
            h5 Richiesta prezzo effettivo oggetti
                input(type="checkbox" name="prezzi_effettivi")

        datalist(id='allSupermercati')
            each supermercato in allSupermercati
                option(data-value=supermercato.ID)=supermercato.Nome
        datalist(id='allAlimenti')
        
        datalist(id='listaQuantita')
            each number in [1,2,3,4,5]
                option(data-value=number)=number
