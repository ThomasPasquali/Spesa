include ../lib/lib
doctype mobile
html
    head
        title Gestione oggetti e supermercacti 
        meta(charset='UTF-8')
        +jquery
        +fontawesome
        +jqueryConfirm
        +tabulator
        +libCSS
        link(rel='stylesheet',type='text/css',href='/css/misc.css')
        script(src='/js/gestioneOggetti.js' type="module")
    body
        .main-container
            header
                +navbar('Gestione oggetti')
            form#newOggetto.flex-vertical
                div
                    label Supermercato: 
                    select(name="supermercato", required)
                div
                    label Nome: 
                    input(type="text", name="nome", autofocus)
                div
                    label Note: 
                    input(type="text", name="note")
                div
                    label Prezzo: 
                    input(type="number", name="prezzo")
                input(type="submit", value="Aggiungi oggetto")

            #table