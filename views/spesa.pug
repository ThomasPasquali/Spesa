doctype mobile
html
    head
        title #{lista.Nome}
        meta(charset='UTF-8')
        link(rel='stylesheet',href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css',integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh',crossorigin='anonymous')
        link(rel='stylesheet',type='text/css',href='/fonts/font-awesome-4.7.0/css/font-awesome.min.css')
        link(href='http://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
        script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js' integrity='sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM' crossorigin='anonymous')
        script(src='/js/spesa.js')
    body
        input(type="hidden" name="listaID" value=lista.ID)
        h1 #{lista.Nome} (##{lista.ID}, #{lista.Supermercato})
        h2 Oggetti della lista (acquistati e non)
        div.d-flex.justify-content-center(id="oggetti-da-acquistare")
            .spinner-border.text-danger(role='status')
            span.sr-only Loading...
        div.d-flex.justify-content-center(id="oggetti-acquistati")

